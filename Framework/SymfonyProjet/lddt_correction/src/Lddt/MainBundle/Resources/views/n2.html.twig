{% extends '::n1.html.twig' %}

{% block body %}
    <!-- Template menu principal -->
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ path('lddt_main_homepage') }}">Les dessins du téléphone</a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="{{ path('lddt_main_homepage') }}">Voir les dessins</a></li>
                    <li><a href="{{ path('lddt_main_create') }}">Envoyer son dessin</a></li>
                </ul>

    {% if is_granted('ROLE_USER') %}
                   <p class="navbar-text navbar-right"> <span class="label label-info">Bienvenue  {{ app.user.username }}</span>
     <a class="btn btn-xs btn-danger" href="{{ path('fos_user_security_logout') }}">Quitter</a></p>
                    {% else %}
                <ul class="nav navbar-nav navbar-right">
  <li><a class="btn btn-small" href="{{ path('fos_user_security_login') }}">Se connecter</a></li>
                    <li> <a href="{{ path('fos_user_registration_register') }}">Créer un compte</a></li>
                </ul>
                {% endif %}
            </div><!--/.nav-collapse -->
        </div>
    </div>
    <div class="container margin-container-top">
    <!-- Fin Template menu principal -->
        {% if form is defined %}
            {% form_theme form 'bootstrap_3_layout.html.twig' %}
        {% endif %}

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                <p>{{ message }}</p>
            </div>
        {% endfor %}

        {% block n3 %}{% endblock %}
    </div>
{% endblock body %}